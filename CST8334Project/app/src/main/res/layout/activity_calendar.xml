<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Hex_Gray90"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fontFamily="@font/calibri"
            android:textColor="@color/Color_Panto"
            android:background="@drawable/test3"
            tools:context="com.example.cst8334project.calendar.CalendarActivity">

            <include layout="@layout/toolbar" />

            <DatePicker
                android:id="@+id/datePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_event"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                />

            <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/datePicker1"
                android:timePickerMode="spinner" />


            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/datePicker1"
                android:layout_toRightOf="@id/timePicker1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duration"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/Color_Panto"/>

                <EditText
                    android:id="@+id/duration"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/Color_Panto"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/timePicker1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type_label"
                    android:layout_width="0dp"
                    android:layout_height="63dp"
                    android:layout_weight="0.25"
                    android:fontFamily="@font/calibri"
                    android:text="@string/appointmentType"
                    android:textColor="@color/Color_Panto"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:ems="10"
                    android:fontFamily="@font/calibri"
                    android:inputType="text"
                    android:labelFor="@id/type"
                    android:textColor="@color/Color_Panto"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/description_layout_label"
                    android:layout_width="0dp"
                    android:layout_height="63dp"
                    android:layout_weight="0.25"
                    android:text="@string/appointmentDescription"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/Color_Panto"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:ems="10"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/calibri"
                    android:inputType="text"
                    android:labelFor="@id/description"
                    android:textColor="@color/Color_Panto"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/enter_location"
                    android:layout_width="0dp"
                    android:layout_height="63dp"
                    android:layout_weight="0.25"
                    android:layout_marginTop="-10dp"
                    android:text="@string/enter_location"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/Color_Panto"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="0.35"
                    android:ems="10"
                    android:fontFamily="@font/calibri"
                    android:labelFor="@id/location"
                    android:textColor="@color/Color_Panto"
                    android:textSize="20sp"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <Button
                android:id="@+id/create_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/create_event"
                android:fontFamily="@font/calibri"
                android:textColor="@color/Color_Panto"
                android:textStyle="bold"/>


        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/drawer" />
</android.support.v4.widget.DrawerLayout>