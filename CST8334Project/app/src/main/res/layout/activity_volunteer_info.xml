<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/Hex_Gray90"
    >

    <ImageView

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:src="@drawable/letterhead"
        app:srcCompat="@drawable/letterhead"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibri"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/report_form"
        android:textColor="@color/Color_Panto"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_weight="0.25"
            android:text="@string/name"
            android:textSize="20sp"
            android:textColor="@color/Color_Panto"
            android:fontFamily="@font/calibri" />

        <EditText
            android:id="@+id/edit_name"
            android:labelFor="@id/edit_name"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_weight="0.35"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/Color_Panto"
            android:fontFamily="@font/calibri"
            tools:ignore="Autofill"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_weight="0.25"
            android:text="@string/date"
            android:textColor="@color/Color_Panto"
            android:textSize="20sp"
            android:fontFamily="@font/calibri"/>

        <EditText
            android:id="@+id/edit_date"
            android:labelFor="@id/edit_date"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_weight="0.35"
            android:ems="10"
            android:textColor="@color/Color_Panto"
            android:inputType="date"
            android:fontFamily="@font/calibri"
            tools:ignore="Autofill"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_weight="0.25"
            android:text="@string/type"
            android:textColor="@color/Color_Panto"
            android:textSize="20sp"
            android:fontFamily="@font/calibri"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/direct_btn"
                android:layout_width="242dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_weight="0.35"
                android:ems="10"
                android:text="@string/direct"
                android:textColor="@color/Color_Panto"
                android:fontFamily="@font/calibri"
                android:textStyle="bold" />

            <Button
                android:id="@+id/indirect_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_weight="0.35"
                android:ems="10"
                android:text="@string/indirect"
                android:textColor="@color/Color_Panto"
                android:fontFamily="@font/calibri"
                android:textStyle="bold"  />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

