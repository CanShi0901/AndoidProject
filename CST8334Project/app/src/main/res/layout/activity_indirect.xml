<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/Hex_Gray90"
    tools:context=".IndirectActivity">

    <TextView
        android:id="@+id/form2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/indirect_form"
        android:textColor="@color/Hex_Blue"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/times_new_roman_normal"
       />

    <RadioButton
        android:id="@+id/RB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_below="@+id/form2"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/times_new_roman_normal"
        android:text="@string/admin"
        android:textColor="@color/Hex_Blue"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form2"
        android:layout_marginStart="140dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Time in Hours/Minute"
        android:textColor="@color/Hex_Blue"
        android:textSize="15sp"
        app:fontFamily="@font/times_new_roman_normal" />


    <RadioButton
        android:id="@+id/RB2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_below="@+id/RB1"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/times_new_roman_normal"
        android:text="@string/board"
        android:textColor="@color/Hex_Blue"
        android:textSize="20sp"
         />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_marginStart="140dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Time in Hours/Minute"
        android:textSize="15sp"
        android:textColor="@color/Hex_Blue"
    android:fontFamily="@font/times_new_roman_normal"/>

    <RadioButton
        android:id="@+id/RB3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_below="@+id/RB2"
        android:layout_marginTop="47dp"
        android:text="@string/training"
        android:textColor="@color/Hex_Blue"
        android:textSize="20sp"
        android:fontFamily="@font/times_new_roman_normal"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_marginStart="140dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Time in Hours/Minute"
        android:textSize="15sp"
        android:textColor="@color/Hex_Blue"
        android:fontFamily="@font/times_new_roman_normal"/>

    <RadioButton
        android:id="@+id/RB4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_below="@+id/RB3"
        android:layout_marginTop="47dp"
        android:text="@string/fundraising"
        android:textColor="@color/Hex_Blue"
        android:textSize="20sp"
        android:fontFamily="@font/times_new_roman_normal"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_marginStart="140dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:fontFamily="@font/times_new_roman_normal"
        android:hint="Time in Hours/Minute"
        android:textColor="@color/Hex_Blue"
        android:textSize="15sp" />

    <RadioButton
        android:id="@+id/RB5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_below="@+id/RB4"
        android:layout_marginTop="47dp"
        android:text="@string/outreach"
        android:textColor="@color/Hex_Blue"
        android:textSize="20sp"
        android:fontFamily="@font/times_new_roman_normal"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_marginStart="140dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Time in Hours/Minute"
        android:textSize="15sp"
        android:textColor="@color/Hex_Blue"
        android:fontFamily="@font/times_new_roman_normal"/>


    <Button
        android:id="@+id/btn_directSubmit"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="265dp"
        android:text="@string/submit"
        android:textColor="@color/Hex_Blue"
        android:textStyle="bold"
        android:fontFamily="@font/times_new_roman_normal"/>

</RelativeLayout>

